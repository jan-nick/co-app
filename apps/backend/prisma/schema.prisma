generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Member {
    id String @unique() @default(uuid())

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()

    userId String
    user   User   @relation(fields: [userId], references: [id])

    organizationId String
    organization   Organization @relation(fields: [organizationId], references: [id])

    @@id([organizationId, userId])
}

model Organization {
    id String @unique() @default(uuid())

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()

    name    String
    purpose String

    bulletin String?

    members Member[]
    votes   Vote[]
}

model User {
    id String @unique() @default(uuid())

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()

    accessToken String?

    email    String @unique
    password String

    firstName String
    lastName  String

    member      Member[]
    voteBallots VoteBallot[]
}

model Vote {
    id String @unique() @default(uuid())

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()

    startsAt DateTime
    endsAt   DateTime

    name        String
    description String

    organizationId String
    organization   Organization @relation(fields: [organizationId], references: [id])

    voteOptions VoteOption[]
    voteBallots VoteBallot[]
}

model VoteBallot {
    id String @unique() @default(uuid())

    createdAt DateTime @default(now())

    user   User   @relation(fields: [userId], references: [id])
    userId String

    vote   Vote   @relation(fields: [voteId], references: [id])
    voteId String

    voteOption   VoteOption @relation(fields: [voteOptionId], references: [id])
    voteOptionId String

    @@id([userId, voteId])
}

model VoteOption {
    id String @unique() @default(uuid())

    name String

    vote        Vote         @relation(fields: [voteId], references: [id])
    voteId      String
    voteBallots VoteBallot[]
}
